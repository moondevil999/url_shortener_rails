<table>
  <tr>
    <th>Long URL</th>
    <th>Kitly URL</th>
    <th>Count</th>
  </tr>
  <% @urls.each do |u| %>
    <tr>
      <td>
        <%= u.url %>
      </td>
      <td>
        <%= link_to "http://www.kitly/#{u.kitly}", redirecting_path(u)%>

      </td>
      <td style='text-align: right'>
        <%=u.count%>
      </td>
    </tr>
  <%end%>
</table>