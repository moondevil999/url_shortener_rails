<div class="container">
  <h1>Welcome to Kitly - your number 1 URL Shortener!</h1>

  <%= form_for :url do |f| %>
    <p>
      <%= f.label "Your URL:" %>
      <%= f.text_field :url %>
    </p>

    <p>
      <%= f.submit %>
    </p>
  <% end %>

